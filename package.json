{
  "name": "elparadisogonzalo-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "packages/frontend",
    "packages/backend",
    "packages/contracts",
    "packages/my-npm-package"
  ],
  "scripts": {
    "bootstrap": "npm install",
    "build": "npm run build --workspaces",
    "build:frontend": "npm --workspace packages/frontend run build",
    "build:backend": "npm --workspace packages/backend run build",
    "build:contracts": "npm --workspace packages/contracts run build",
    "lint": "npm run lint --workspaces",
    "lint:frontend": "npm --workspace packages/frontend run lint",
    "test": "npm run test --workspaces",
    "start:frontend": "npm --workspace packages/frontend run dev",
    "start:backend": "npm --workspace packages/backend run dev",
    "preview:frontend": "npm --workspace packages/frontend run preview",
    "clean": "rimraf node_modules packages/**/node_modules"
  },
  "devDependencies": {
    "rimraf": "^5.0.0",
    "rollup": "^2.79.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "dependencies": {
    "@pinata/sdk": "^2.1.0",
    "dotenv": "^17.2.1"
  }
}
